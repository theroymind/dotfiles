[user]
	name = {NAME}
	email = {EMAIL}
[core]
	editor = vim
	excludesfile = /Users/{USER_DIRECTORY}/.gitignore_global
[push]
	default = simple
[help]
	autocorrect = 10
[alias]
    exclude = !sh -c 'echo "$1" >> .git/info/exclude' -
    alias = !git config --list | grep 'alias\\.' | sed 's/alias\\.\\([^=]*\\)=\\(.*\\)/\\1\t=> \\2/' | sort
    ignore=!([ ! -e .gitignore ] && touch .gitignore) | echo $1 >>.gitignore
    cms = commit -S -m
    co = checkout
    cm  = commit -m
    cma = commit -a -m
    cmf = commit -m "f" --no-verify
    a = add
    master = checkout master
    staging = checkout staging
    main = checkout main
    amend = !git log -n 1 --pretty=tformat:%s%n%n%b | git commit -F - --amend
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    publish = "!git push -u origin $(git branch-name)"
    mk = "checkout -b"
    mkf = "!f() { git checkout -b ericroy/sc-$1/$2; }; f"
    mks = mkstagingnew
    mkstaging = mkstagingnew
    mkstagingnew = "!~/.dotfiles/mkstaging.sh"
    mr = "!sh ~/.dotfiles/git-create-mr.sh"
    feature = !git checkout $(git branch-name | perl -n -e'/([A-Za-z0-9\\-\\_\\.\\/]+)_STAGING/ && print $1')
    revstaging = !COMMIT=$(git log -n 1 --format="%H") && git staging && git pull && git revert $COMMIT --no-edit && git push && git checkout - && git feature
    recent-branches = "!git for-each-ref --sort=-committerdate refs/heads | less"
    rbm = "!git checkout master && git pull && git checkout - && git rebase -i origin/master"
    del = "branch -D"
    lg = "log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative"
    skip = update-index --skip-worktree
    unskip = update-index --no-skip-worktree
    skipped = !git ls-files -v | grep '^S' | cut -c3-
[diff]
	tool = Kaleidoscope
[difftool "Kaleidoscope"]
	cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
	cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
	trustexitcode = true
[merge]
	tool = Kaleidoscope
[difftool]
	prompt = false
[mergetool]
	prompt = false
[branch]
	autosetuprebase = always
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
